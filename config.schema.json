{
  "pluginAlias": "SolaredgeRealTime",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "SolaredgeRealTime"
      },
      "inverter": {
        "title": "Inverter",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "title": "Some ID, if it is changed room and automations in Home-App may be reset",
              "type": "string",
              "required": true,
              "default": "Inverter-1"
            },
            "displayName": {
              "title": "Name to display in Homekit",
              "type": "string",
              "required": true,
              "default": "Inverter"
            },
            "ip": {
              "title": "IP-Address",
              "type": "string",
              "required": true,
              "default": "192.168.1.42"
            },
            "port": {
              "title": "Port",
              "type": "number",
              "required": false,
              "default": "1502"
            },
            "updateInterval": {
              "title": "Update Interval in Seconds",
              "type": "number",
              "required": false,
              "default": "60"
            },
            "meter": {
              "title": "Which meter should be read (0 means inverter output; 1 is grid connection, mostly)",
              "type": "number",
              "required": false,
              "default": "0"
            }
          }
        }
      }
    }
  }
}
