{
  "pluginAlias": "SolaredgeRealTime",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "SolaredgeRealTime"
      },
      "inverter": {
        "title": "Inverter",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "title": "Some ID, if it is changed room and automations in Home-App may be reset",
              "type": "string",
              "required": true,
              "default": "Inverter-1"
            },
            "displayName": {
              "title": "Name to display in Homekit",
              "type": "string",
              "required": true,
              "default": "Inverter"
            },
            "ip": {
              "title": "IP-Address",
              "type": "string",
              "required": true,
              "default": "192.168.1.42"
            },
            "port": {
              "title": "Port",
              "type": "number",
              "required": false,
              "default": "1502"
            },
            "updateInterval": {
              "title": "Update Interval in Seconds",
              "type": "number",
              "required": false,
              "default": "60"
            },
            "powerAddress": {
              "title": "Which register should be read for power value",
              "type": "number",
              "required": false,
              "default": "40083"
            },
            "powerSfAddress": {
              "title": "Which register should be read for the scaling factor of the power value",
              "type": "number",
              "required": false,
              "default": "40084"
            },
            "powerUnsignedValue": {
              "title": "Is the power value signed (i.e. from a meter with export and import) or unsigned (i.e. from the inverter)?",
              "type": "boolean",
              "required": false,
              "default": true
            }
          }
        }
      }
    }
  }
}
